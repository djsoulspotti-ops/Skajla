args = "sock.bind(('', 0))"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "port = sock.getsockname()[1]"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sock.close()"

[[workflows.workflow.tasks]]
task = "shell.exec"
